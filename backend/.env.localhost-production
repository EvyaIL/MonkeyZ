# Localhost Production Mirror Configuration
# Create this file as .env in your backend folder to make localhost behave like production

# Set to production mode
NODE_ENV=production
ENVIRONMENT=production

# Use production API URL (same as production frontend)
REACT_APP_API_URL=http://localhost:8000

# PayPal Configuration (use your production PayPal client ID if you want exact behavior)
# WARNING: Only use sandbox client ID for testing, never use live client ID in localhost
PAYPAL_CLIENT_ID=your_sandbox_client_id_here
PAYPAL_MODE=sandbox

# Database Configuration (use same database as production)
# WARNING: Be careful with production database - consider using a copy
MONGODB_URL=your_production_mongodb_url_here

# Email Configuration (same as production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_app_password
ADMIN_EMAIL=admin@monkeyz.co.il

# Frontend URL (localhost frontend)
FRONTEND_URL=http://localhost:3000

# Security (use production-like settings)
RESET_TOKEN_SECRET_KEY=your_production_secret_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Enable production-like logging
LOG_LEVEL=info
